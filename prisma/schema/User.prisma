model User {
  id             String    @id @default(uuid())
  email          String
  password       String
  phone          String?
  name           String?
  active         Boolean   @default(true)
  profilePicture String?
  lastLoginAt    DateTime?
  deletedAt      DateTime?
  createdAt      DateTime  @default(now())

  Role         Role[]
  userSessions UserSession[]

  @@index([email])
  @@index([phone])
}
