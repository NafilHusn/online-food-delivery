model User {
  id             String    @id @default(uuid())
  email          String
  password       String
  phone          String?
  name           String?
  active         Boolean   @default(true)
  profilePicture String?
  lastLoginAt    DateTime?
  deletedAt      DateTime?
  roleId         String
  createdAt      DateTime  @default(now())
  Role           Role      @relation(fields: [roleId], references: [id], onDelete: Cascade)

  @@index([email])
  @@index([phone])
}